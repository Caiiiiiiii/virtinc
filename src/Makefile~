main: util.o client server switch
	gcc -o bin/main main.c
util.o:
	cc -c -o bin/util.o util.c
client: util.o
	gcc -o bin/client bin/util.o client.c -lpcap -pthread
server: util.o
	gcc -o bin/server bin/util.o server.c -lpcap -pthread
switch: util.o
	gcc -o bin/switch -I. -I/usr/include/cryptopp bin/util.o switch.cpp -lpcap -pthread -lcryptopp -lpthread
